@using AdminAssistant.Blog.Models.DomainModel
@model List<PostViewModel>

<div class="container" style="margin-top: 100px">
    <h2>Your posts</h2>

    <div class="row" style="margin-top: 20px">
        <div class="col-md-12 text-right">
            <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#addNewPost">Add new</button>
        </div>
    </div>
    <div class="row" style="margin-top: 50px;border-top: 2px solid gray; padding-top: 10px">
        @foreach (var post in Model)
        {
            <div class="col-md-6" style="border-right: 2px solid gray">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="image-wrapper"><img src="@post.PictureUrl" alt="Blog Image"></div>
                        </div>
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-8">
                                    <p class="title"><a href="#"><b class="light-color">@post.Title</b></a></p>
                                    <p class="date" style="margin-top: 10px"><em>@post.Date</em></p>
                                </div>
                                <div class="col-md-4">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <button class="btn btn-sm btn-info">Edit</button>
                                        </div>
                                    </div>
                                    <div class="row" style="margin-top: 20px">
                                        <div class="col-md-12">
                                            <button class="btn btn-danger btn-sm">Delete</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <form method="post" id="createPostForm">
    <!-- Modal -->
    <div class="modal fade" id="addNewPost" tabindex="-1" role="dialog" aria-labelledby="addNewPostTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addNewPostTitle">Add new post</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="Title">Title: </label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="Title" id="titleInput" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label for="Body">Body: </label>
                            </div>
                            <div class="col-md-12">
                                <div class="form-control" id="bodyInput"></div>
                                <input type="text" name="Body" id="bodyInputValue" hidden="hidden" value="" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label for="file">Upload Image:</label>
                                <input type="file" name="file" id="fileUpload" />
                                <input type="button" value="Submit photo" class="btn btn-primary" id="submitUploadingPhoto" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button class="btn btn-primary" id="submitAddingNewPost">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    </form>
</div>


<script>

    $("#submitUploadingPhoto").on('click', function () {

        Admin.uploadImage();
    });


    $("#submitAddingNewPost").on('click', function () {

        $(".note-icon-code").click();
        var inputValue = $(".note-codable")[0].value;
        console.log(inputValue);

        $("#bodyInputValue").val(inputValue);

        $("#file").val($("#fileUpload").val());
        $("#submitUploadingPhoto").click();

        Admin.createNewPost();
    })

</script>

