
@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using AdminAssistant.Blog.Models.DomainModel
@model PageViewModel

    <div class="about-container">
        <img src="~/img/about.png" width="100%" height="100%" style="margin-left: 2%; padding-left: 5%">
        <div class="text-about row" style="text-align: center;">
            <div class="col-md- col-sm-6 text-width">
                <h4 style="font-size: 2vw; margin-bottom: 30px; color:black">Hello and welcome to the PrivacyOneStop.</h4>
                @Html.Raw(Model.Text)
            </div>
            <div class="col-md-6 col-sm-6" style="background-color: white; opacity: 0%;">
                <div></div>
            </div>
        </div>
    </div>

<style>
    .about-container {
        position: relative;
        text-align: center;
        color: white;
    }

    .text-about {
        position: absolute;
        top: 7%;
        left: 5%;
    }

    .text-width {
        color: black;
    }

    .text {
        color: black;
        font-size: 1.4vw;
        text-align: justify;
    }

    @@media (max-width: 796px) {
        .text {
            font-size: 1.5vw;
        }
    }

    @@media (max-width: 600px) {
        .text {
            font-size: 1.8vw;
        }
    }

    @@media (max-width: 480px) {
        .text {
            font-size: 2vw;
        }
    }

    @@media (max-width: 400px) {
        .text {
            font-size: 2.2vw;
        }
    }

    @@media (max-width: 320px) {
        .text {
            font-size: 2.4vw;
        }
    }

    @@media (min-width: 320px) {
        .text-width {
            color: white;
            flex: 0 0 50%;
            max-width: 50%;
            font-size: 2.4vw;
        }
    }

    main {
        background-color: white;
    }
</style>